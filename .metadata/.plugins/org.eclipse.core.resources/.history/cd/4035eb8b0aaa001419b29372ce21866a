package com.articles.frontend.web.handler;

import java.io.IOException;
import java.util.Properties;

import org.springframework.core.io.support.PropertiesLoaderUtils;

public class LanguageHandler {
	
	private static String LOCATION = "data/languages/";
	
	public LanguageHandler(){}
	
	public Properties getLanguage(String language) throws IOException {
		Properties properties = PropertiesLoaderUtils.loadAllProperties(location + language + ".properties");
		return properties;
	}
	
	public static void main(String[] args) throws IOException {
		new LanguageHandler().getLanguage("en");
	}
}
